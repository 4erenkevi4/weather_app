<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="120dp"
        android:padding="5dp">


    <ImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sunny"
            android:id="@+id/item_icon_weather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp" />

    <TextView
            android:text="13:00"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_time"
            app:layout_constraintStart_toEndOf="@+id/item_icon_weather"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@+id/item_icon_weather" />

    <TextView
            android:text="Clear"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_description"
            app:layout_constraintTop_toBottomOf="@+id/item_time"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/item_time"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon_weather"
            app:layout_constraintVertical_bias="1.0" />

    <TextView
            android:text="25Â°C"
            android:textSize="40sp"
            android:textColor="#2477D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_icon_weather"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="0.507" />
</androidx.constraintlayout.widget.ConstraintLayout>